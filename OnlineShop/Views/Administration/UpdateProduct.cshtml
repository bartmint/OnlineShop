@model OnlineShop.Application.ViewModels.EditProductViewModel

@{
    ViewData["Title"] = "UpdateProduct";
}

<h1>Add new product</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateProduct" asp-controller="Administration" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All"></div>
            <input hidden asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProductionCompany" class="control-label"></label>
                <div>
                    <select asp-for="ProductionCompany" class="custom-select mr-sm-2"
                            asp-items="Html.GetEnumSelectList<Producent>()">
                        <option value="">Please Select</option>
                    </select>
                </div>
                <span asp-validation-for="ProductionCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="System" class="control-label"></label>
                <input asp-for="System" class="form-control" />
                <span asp-validation-for="System" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPU" class="control-label"></label>
                <input asp-for="CPU" class="form-control" />
                <span asp-validation-for="CPU" class="text-danger"></span>
            </div>
            <label asp-for="MemoryType" class="control-label"></label>
            <div>
                <select asp-for="MemoryType" class="custom-select mr-sm-2"
                        asp-items="Html.GetEnumSelectList<MemoryType>()">
                    <option value="">Please Select</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="HardDrive" class="control-label"></label>
                <input asp-for="HardDrive" class="form-control" />
                <span asp-validation-for="HardDrive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GraphicCard" class="control-label"></label>
                <input asp-for="GraphicCard" class="form-control" />
                <span asp-validation-for="GraphicCard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionYear" class="control-label"></label>
                <input asp-for="ProductionYear" class="form-control" />
                <span asp-validation-for="ProductionYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScreenResolution" class="control-label"></label>
                <input asp-for="ScreenResolution" class="form-control" />
                <span asp-validation-for="ScreenResolution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <label asp-for="Warranty" class="control-label"></label>
            <div>
                <select asp-for="Warranty" class="custom-select mr-sm-2"
                        asp-items="Html.GetEnumSelectList<Varranty>()">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="Warranty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ammount" class="control-label"></label>
                <input asp-for="Ammount" class="form-control" />
                <span asp-validation-for="Ammount" class="text-danger"></span>
            </div>
            <button type="submit" asp-action="UpdateProduct" asp-controller="Administration">Create</button>
        </form>
    </div>
</div>

@section Scripts {
   @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
